<p id="notice"><%= notice %></p>

<h1>To do</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Stage</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
     <% @to_do.each do |project| %>
      <tr>
        <td><%= project.content %></td>
        <td><%= project.stage %> </td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Mark as Doing', change_project_path(project, stage: "doing"), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>


